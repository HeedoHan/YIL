<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:weightSum="1">
    <Button
        android:layout_width="78dp"
        android:layout_height="match_parent"
        android:background="@drawable/btn_list_image"
        android:id="@+id/btn_grouplist"/>
       <!-- android:onClick="onClick3"-->

        <SearchView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/searchView"
            android:layout_weight="0.93" />
    <Button
        android:background="@drawable/postbox"
        android:layout_width="68dp"
        android:layout_height="match_parent"
        android:id="@+id/postbox"
        />

    </LinearLayout>

    <ScrollView
        android:id="@+id/bookslist_scroll_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_weight="1.00">

    <ListView
        android:id="@+id/listview"
        android:layout_height="478dp"
        android:layout_width="match_parent"
        android:divider="#ffcc22"
        android:dividerHeight="1.5dp"
        android:choiceMode="singleChoice"
        />
    </ScrollView>

    <Button
        android:id="@+id/btn_addbook"
        android:onClick="onClick2"
        android:text="+"
        android:textSize="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="@color/abc_background_cache_hint_selector_material_dark"
        android:background="@color/background_material_dark"
        android:textColor="#fffff4ff" />

</LinearLayout>